{
  "manifest_version": 3,
  "name": "Theme Toggler",
  "version": "1.0",
  "description": "Toggle any website between dark and light mode",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
